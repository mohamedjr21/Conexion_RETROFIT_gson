<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="true" prefHeight="400.0" prefWidth="600.0" spacing="30.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.conexion_retrofit_gson.HelloController">
   <padding>
      <Insets bottom="25.0" left="40.0" right="40.0" top="25.0" />
   </padding>
   <children>
      <Label alignment="CENTER" maxWidth="Infinity" prefHeight="80.0" text="Tiempo">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label alignment="CENTER" prefWidth="150.0" text="Tu ciudad">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="ciudadTextField" prefHeight="35.0" prefWidth="250.0" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <Button onAction="#obtenerTiempo" prefHeight="40.0" prefWidth="150.0" text="Obtener Tiempo">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label alignment="CENTER" prefWidth="150.0" text="Resultado:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="mostrarDatosTextfield" editable="false" prefHeight="35.0" prefWidth="250.0" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
